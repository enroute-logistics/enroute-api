<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>
<properties>

    <!-- Enable environment variables -->
    <entry key='config.useEnvironmentVariables'>true</entry>

    <!-- Web configuration - values come from environment variables -->
    <entry key='web.path'>./web</entry>
    <entry key='web.debug'>false</entry>
    <entry key='web.console'>false</entry>
    <!-- web.port and web.address will come from WEB_PORT and WEB_ADDRESS env vars -->

    <!-- Database configuration - values come from environment variables -->
    <entry key='database.driver'>com.mysql.cj.jdbc.Driver</entry>
    <entry key='database.changelog'>./schema/changelog-master.xml</entry>
    <!-- database.url comes from DATABASE_URL env var -->
    <!-- database.user comes from DATABASE_USER env var -->  
    <!-- database.password comes from DATABASE_PASSWORD env var -->

    <!-- GPS Device Protocols - Popular ones enabled -->
    <entry key='gps103.port'>5001</entry>        <!-- TK102, TK103 series -->
    <entry key='tk103.port'>5002</entry>         <!-- TK103 variants -->
    <entry key='gl200.port'>5004</entry>         <!-- Queclink GL200 -->
    <entry key='t55.port'>5005</entry>           <!-- Generic T55 -->
    <entry key='meiligao.port'>5009</entry>      <!-- Meiligao devices -->
    <entry key='h02.port'>5013</entry>           <!-- H02 protocol -->
    <entry key='jt600.port'>5014</entry>         <!-- JT600 series -->
    <entry key='gt06.port'>5023</entry>          <!-- GT06 protocol -->
    <entry key='teltonika.port'>5027</entry>     <!-- Teltonika devices -->
    <entry key='osmand.port'>5055</entry>        <!-- OsmAnd mobile app -->

    <!-- Geocoder configuration -->
    <entry key='geocoder.type'>nominatim</entry>
    <entry key='geocoder.url'>https://nominatim.openstreetmap.org/reverse</entry>

    <!-- Media path -->
    <entry key='media.path'>./media</entry>

    <!-- Logging configuration -->
    <entry key='logger.console'>true</entry>
    <entry key='logger.queries'>false</entry>
    <entry key='logger.fullStackTraces'>false</entry>

    <!-- Mail configuration (optional) -->
    <entry key='mail.smtp.host'>${MAIL_SMTP_HOST}</entry>
    <entry key='mail.smtp.port'>${MAIL_SMTP_PORT}</entry>
    <entry key='mail.smtp.ssl'>${MAIL_SMTP_SSL}</entry>
    <entry key='mail.smtp.username'>${MAIL_SMTP_USERNAME}</entry>
    <entry key='mail.smtp.password'>${MAIL_SMTP_PASSWORD}</entry>
    <entry key='mail.smtp.from'>${MAIL_FROM}</entry>

    <!-- Security -->
    <entry key='web.sanitize'>true</entry>
    <entry key='web.cacheControl'>max-age=3600,public</entry>

</properties> 